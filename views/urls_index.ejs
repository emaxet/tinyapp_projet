<% include partials/_header %>

<div class="wrapper">
  <h1>&nbsp&nbspTiny Urls</h1>
  <br>
  <ul>
    <% for (var key in urls) { %>
    <li> <a href="/urls/<%= key %>"><%= urls[key] %> : <%= key %></a>
      <form id="deleteURL" action="/urls/<%= key %>/delete" method="POST">
        <input type="hidden" name="delete" value="<%= key %>">
        <button>x</button>
      </form></li>
    <% } %>
    <br>
    <a class="badge badge-primary nav-button" href="/urls/new">Submit URL For Shortening</a>
  </ul>
  <% if(error) { %>
  <br>
  <p class="errorMessage">Please <a href="/login">login</a> or <a href="/register">register</a> to shorten URLs</p>
  <% } %>
</div>

<% include partials/_footer %>
