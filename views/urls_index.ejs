<% include partials/_header %>

<div style="text-align: center; margin-top: 18%">
  <h1>&nbsp&nbspTiny Urls</h1>
  <br>
  <ul>
    <% for (var key in urls) { %>
    <li style="list-style-type: none; text-align: center; line-height: 30px; font-size: 20px"> <a href="/urls/<%= key %>"><%= urls[key] %> : <%= key %></a>
      <form style="display: inline-block" action="/urls/<%= key %>/delete" method="POST">
        <input type="hidden" name="delete" value="<%= key %>">
        <button style="margin-left:10px; font-weight: bold; background-color: white; border: none; color: #b22c2c">x</button>
      </form></li>
    <% } %>
    <br>
    <a style="padding: 10px" class="badge badge-primary" href="/urls/new">Submit URL For Shortening</a>
  </ul>
</div>

<% include partials/_footer %>
